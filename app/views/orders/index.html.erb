<div class="container-fluid orders">
  <h1>Orders</h1>
	<% @orders.each do |order| %>
  <div class="row">
    <div class="col-md-4 order_list_left">
      <h2>Order # <%= order.id %></h2>
    </div>
    <div class="col-md-8 order_list_right">
  		<ul>
        <li><h3><%= order.product.try(:name) %></h3></li>
        <li><small><%= order.product.description %></small></li>
  			<li><strong>$ <%= order.product.price %></strong></li>
        <li><button class="remove-product">
              <%= link_to 'Remove', order, method: :delete, data: { confirm: 'Are you sure?' } %>
            </button>
        </li>
      </ul>
    </div>
  </div>
	<% end %>
</div>
