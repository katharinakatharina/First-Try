<p id="notice"><%= notice %></p>


<div class="show-header">
  <h1>
    <%= @product.name %>
  </h1>
</div>

<div class="col-md-7">
  <p>
    <%= image_tag(@product.image_url, class: "img-responsive") %>
  </p>

</div>
<div class="col-md-5">
  <%= image_tag(@product.brand_image, class: "img-responsive") %>
  <P><%= @product.brand %></p>
  <p> Art.Nr.: <%= @product.article_number %> </p>
  <p>
    <strong>Price:</strong>
  </p>
  <div class="product-price">
    <p>
      <%= @product.price %>
    </p>
  </div>
  <p>
    <%= @product.description %>
  </p>
  <p>
    <strong>Colour:</strong>
    <%= @product.color %>
  </p>
</div>
