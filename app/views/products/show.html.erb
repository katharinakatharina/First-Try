<div class="img-teaser">
  <%= image_tag("bike2.jpg", class: "img-responsive") %>
</div>
<div class="container-fluid">
  <p id="notice"><%= notice %></p>



  <h1>
    <%= @product.name %>
  </h1>

  <div class="col-md-7">
    <p>
      <%= image_tag(@product.image_url, class: "img-responsive") %>
    </p>

  </div>
  <div class="col-md-5">
    <%= image_tag(@product.brand_image, class: "img-responsive") %>
    <%= @product.brand %>
    <p> Art.Nr.: <%= @product.article_number %> </p>
    <p>
      <strong>Price:</strong>
      <%= @product.price %>
    </p>
    <p>
      <%= @product.description %>
    </p>
    <p>
      <strong>Colour:</strong>
      <%= @product.color %>
    </p>
  </div>


  <button><%= link_to 'Edit', edit_product_path(@product) %> </button> |
  <button><%= link_to 'Back', products_path %></button>
</div>
